<% if @result %>
<section>
  <header><h1>Results</h1>
  </header>
 <p>
      The result of <%=@first%> <%=@operator%> <%=@second%> is <%=@result%>   <!-- Instance variable -->
</p>
</section>
<% end %>

<form action='/basic_calc' method='get'>
  first: <input type='number' name='first'>
  operator: <input type='text' name='operator'>
  second: <input type='number' name='second'>
  <button>calculate!</button>

</form>